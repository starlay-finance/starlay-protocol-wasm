{
  "name": "starlay-protocol-wasm",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@727-ventures/typechain-compiler": "^1.1.0",
    "@727-ventures/typechain-polkadot": "^1.1.0",
    "@727-ventures/typechain-types": "^1.1.0",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "build": "manifest_paths=`find contracts -type f -name Cargo.toml` && for manifest_path in $manifest_paths; do cargo contract build --manifest-path $manifest_path; done",
    "compile": "typechain-compiler --toolchain nightly-2023-03-05 --nt && yarn generate",
    "compile:release": "typechain-compiler --release --toolchain nightly-2023-03-05 --nt && yarn generate",
    "test:typechain": "jest --testPathPattern \".spec.ts$\" --runInBand",
    "test:single": "jest",
    "test": "yarn compile && yarn test:typechain",
    "generate": "typechain-polkadot --in artifacts --out types --plugins typechain/plugins",
    "lint": "prettier --check . && eslint . && cargo check",
    "lint:fix": "prettier --write . && eslint . --fix && cargo fmt --all",
    "deploy:local": "yarn compile:release && ts-node scripts/deploy/index.ts local",
    "deploy:shibuya": "yarn compile:release && ts-node scripts/deploy/index.ts shibuya"
  },
  "resolutions": {
    "@polkadot/api": "^9.13.4",
    "@polkadot/api-contract": "^9.13.4"
  },
  "devDependencies": {
    "dotenv": "^16.0.3",
    "type-fest": "^3.6.1"
  }
}
